#include <iostream>
 
using namespace std;
 
int main()
{
  cout << "##  Program C++ Menghitung Luas Persegi  ##" << endl;
  cout << "===========================================" << endl;
  cout << endl;
 
  float sisi, luas;
 
  cout << "Input sisi persegi: ";
  cin >> sisi;
  cout << endl;
 
  luas = sisi * sisi;
 
  cout << "Luas persegi = "<< luas << endl;
 
  return 0;
}
